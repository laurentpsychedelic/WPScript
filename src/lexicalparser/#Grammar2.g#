class ScriptLexer extends Lexer;

NUM :   '0'..'9'+ ('.' '0'..'9'+)?;
BOOL: (('T'|'t') ('R'|'r') ('U'|'u') ('E'|'e')) | (('F'|'f') ('A'|'a') ('L'|'l') ('S'|'s') ('E'|'e'));
IF  : ('I'|'i') ('F'|'f');
ID  :   ('a'..'z'|'A'..'Z'|'_') ('a'..'z'|'A'..'Z'|'0'..'9'|'_')* ;
EQUAL: '=';
COMMA: ',';
DQUOTE: '"';
LEFT_P: '(';
RIGHT_P: ')';
LEFT_CB : '{'; // left curved bracket
RIGHT_CB : '}'; // right curved bracket
NEWLINE:'\r'? '\n' ;
WS  :   (' '|'\t')+ {skip();} ;

class ScriptParser extends Parser;


